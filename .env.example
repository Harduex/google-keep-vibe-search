# Path to the Google Keep export folder
GOOGLE_KEEP_PATH=D:\\Takeout\\Keep

# Server settings
HOST=127.0.0.1
PORT=8000

# Search settings
MAX_RESULTS=20
SEARCH_THRESHOLD=0.0
IMAGE_SEARCH_THRESHOLD=0.2
IMAGE_SEARCH_WEIGHT=0.3

# Clustering settings
DEFAULT_NUM_CLUSTERS=8

# Ollama settings
OLLAMA_API_URL=http://localhost:11434
LLM_MODEL=llama3
CHAT_CONTEXT_NOTES=5

# AI Agent settings
ENABLE_AI_AGENT_MODE=true
MAX_AGENT_SEARCHES=2
AGENT_SEARCH_TIMEOUT=15
AI_AGENT_LOG_FILE=agent_debug.log

# Enable/disable image search
ENABLE_IMAGE_SEARCH=true
